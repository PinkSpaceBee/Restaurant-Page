class Navbar {
    constructor (parent, main, menu, contacts) {
        this.parent = parent;
        this.main = main;
        this.menu = menu;
        this.contacts = contacts;
    }
    restaurantName = 'GenericRestaurant'

    appendLink(...children) {
        for (const child of children) {
            this.parent.appendChild(child);
            child.href = '#';
            child.classList.add(`${child.textContent}-nav`, 'navlink');
        }
    }

    addDiv(wrapper, className, ...elems) {
        for (const elem of elems) {
            let temp = elem.classList.contains(className) ? elem : '';
    
            if (temp.tagName === 'SECTION') {
                wrapper.appendChild(temp);
            };
        }
    }
    
    highlightNavlink() {
    }
    
}

const navbarDiv = document.createElement('nav');
navbarDiv.classList.add('navbar');

const main = document.createElement('a');
const menu = document.createElement('a');
const contacts = document.createElement('a');

const navbar = new Navbar(navbarDiv, main, menu, contacts);

main.textContent = 'main';
menu.textContent = 'menu';
contacts.textContent = 'contacts';

navbar.appendLink(main, menu, contacts);

export {
    navbarDiv,
    navbar,
}